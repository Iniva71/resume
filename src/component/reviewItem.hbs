

         
            <div class="card">{{#each reviewList}}
                <div class="card-body ms-2">{{#with title}}
                    <div><h4>{{userName}}</h4></div>
                    <div>{{caption}}</div>
                    <div class="mt-3">{{date}}</div>
                   {{/with}}
                </div>
                <hr>
                <div>{{#with reviewBody}}
                       <div class="ms-2">{{#with seller}}
                       <div>{{title}} : <b>{{value}} </b> </div>
                       {{/with}}
                       </div>
                       <div class="my-3 ms-2">{{#with rating}}
                       <div class="mb-3">{{title}} : {{value}}</div>               
                       {{/with}} {{!-- rating --}}             
                       </div>
                       <div class="mb-5 ms-2">{{#each text}} <q> {{this}} </q>{{/each}}</div>
                      
                       <div class="ms-2 mb-3">{{#with advantages}}
                           <div><b>{{title}} :</b></div>
                           <div>{{text}}</div>
                        {{/with}}
                       </div>
                       <div class="ms-2 mb-3">{{#with disadvantages}}
                           <div><b>{{title}} :</b></div>
                          <div>{{text}}</div>
                        {{/with}}
                       </div>
                         
                         <diV class="row">       {{#each images}}
                         <div class="col-1 ms-2 mb-4">
                            <img class="card-img-top" src="{{this}}" width="500" height="50"> 
                        </div>
                        {{/each}}
                         </diV>
                        
                         
                        <div class="card">{{#each coments}}
                            <div class="card-body">
                                <div class="card ms-2">
                                    <div class="ms-2 mt-2"><h5>{{userName}}</h5></div>
                                    <div class="ms-2 my-2">{{date}}</div>
                                    <div class="ms-2 mb-2"><q>{{text}}</q></div>
                                </div>          
                            </div>                            
                            {{/each}}
                        </div>
                       
                    {{/with}}
                </div>
                {{/each}}
            </div> 
         

    
