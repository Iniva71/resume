{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
     {{#with main}}
    <main>
      <section>
        <div> {{> title data="Work history"  big=true}} </div>
          <div>
            <ul>
              {{#each works}}
              <li>
              <div><h3>{{position}}</h3></div>
                    
              <div>{{duration.from}}
                   -
                  {{#if duration.to}}
                  {{duration.to}}
                  {{else}} 
                  (досі працюю)
                  {{/if}}        
              </div>
              </li> 

              <br>
              <div>{{> link text=company.name href=company.url blank=true noLine=true }} </div>
      
              <b>{{company.name}}</b>
              <div>
                      
              <b> <strong> <h4> Projects ({{projectAmount}})</h4></strong> </b>
              </div>           
                    
              <ul>
                  {{#each projects}}
                    <li>
                      <div>{{> link text=name href=url blank=true noLine=true}}</div>
                        
                      <div><p>{{about}}</p></div>
                      
                      <em><h3> Project stacks ({{stackAmount}})</h3></em> 
                      {{#each stacks}} 
                      <ul>
                        <li>
                        {{name}}
                        </li>
                      </ul>
                      {{/each}}
                      
                       <em><h3> Awards</h3></em> 
                        {{#each awards}} 
                      <ul>
                        <li>
                        {{name}}
                        </li>
                      </ul>
                        {{/each}}
                      
                    </li>
                  {{/each}}   
              </ul> 
            {{/each}}
          </ul>
        </div>
      </section>
         
  </main>
  {{/with}}

</div>

