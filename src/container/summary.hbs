{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="row">
     {{#with main}}
    <main class="col-8">
        <section class="mb-3">
            <div>
                {{> title data="Summary"  big=true}}
            </div>
            <div>
                <p>
                     {{summary.text}}
                </p>
            </div>
        </section>
        {{#with experience}}
        <section>  
               {{> title data="Experience"}}
    
                <p> {{text}} </p>
        </section>
        {{/with}}
    </main>
    {{/with}}

    

</div>

