<main>
<div>

    <div> <h2> Apple MacBook Pro</h2></div>
   <h3>  <div>Description: <q> {{description}}</q></div>
    <div>Price : {{price}}</div>
    <div>Category: <q>Computers & Tablets</q></div></h3>
    
    <div> <h3> Features:</h3> {{#with features}}
    <ul>
        <li>

            <div><h4>Processor:{{#with processor}}</h4> 
            <ul>
                <li>
                    <div>brand: {{brand}}</div>
                    <div>model: {{model}}</div>
                    <div>speed: {{speed}}</div>
                    <div>cores: {{cores}}</div>
                    <div>cache: {{cache}}</div>

               </li>
            {{/with}}
            </ul>
            </div>


            <div><h4>Memory: </h4>{{#with memory}}
            <ul>
                <li>
                    <div>type: {{type}}</div>
                    <div>size: {{size}}</div>
                    <div>speed: {{speed}}</div>
               </li>
            {{/with}}
            </ul>
            </div>


            <div><h4>Storage:{{#with storage}}</h4> 
            <ul>
                <li>
                    <div>type: {{type}}</div>
                    <div>size: {{size}}</div>
               </li>
            {{/with}}
            </ul>
            </div>


            <div> <h4> Display: {{#with display}}</h4>
            <ul>
                <li>
                    <div>size: {{size}}</div>
                    <div>resolution: {{resolution}}</div>
                    <div>technology: {{technology}}</div>
                    <div>color_space: {{color_space:}}</div>
                    <div>brightness: {{brightness}}</div>
                    <div>refresh_rate: {{refresh_rate}}</div>

               </li>
            {{/with}}
            </ul>
            </div>


            <div><h4>Graphics:</h4>{{#with graphics}}
            <ul>
                <li>
                  <div>brand; {{brand}}</div>
                  <div>model: {{model}}</div>
                  <div>memoty: {{memory}}</div>
                </li>
                {{/with}}
            </ul>
            
            </div>

            
            <div><h4>Ports:</h4>
                <ul>{{#each ports}}
                    <li>
                        <div>type:{{type}}</div>
                        <div>count: {{count}}</div>
                        
                        {{#if features}}
                        <div>features:
                            <ul>{{#each features}}
                            <li> {{this}}</li>
                            {{/each}}
                            </ul>
                        </div>
                        {{/if}}
                    </li>

                {{/each}}
                </ul>
            
            
            </div>

            <div><h4>Battery: </h4> {{#with battery}}
            <ul> 
                <li>
                    <div>type: {{type}}</div>
                    <div>capacity:{{capacity}}</div>
                    <div>life:{{life}}</div>
                </li>
            {{/with}}
            </ul>
            
            
            </div>
            <div><h4>Weight: {{weight}}</h4></div>
            
            <div><h4>Dimensions: </h4>{{#with dimensions}}
            <ul><li>
                <div>heitght:{{height}}</div>
                <div>width: {{width}}</div>
                <div>depth:{{depth}}</div>
                </li>
                
            </ul>{{/with}}
            
            </div>
            <br>
            <div><h4> Operating sistem: {{operating_system}}</h4></div>
            
            <div><h4>Accessories:</h4> {{#each accessories}}
            <ul>
                <li>
                    <div>name: {{name}}</div>
                    <div>price: {{price}}</div>
                </li>          
            </ul>{{/each}}
            </div>

        </li>
        {{/with}}
    </ul>
   </div>


</div>
</main>